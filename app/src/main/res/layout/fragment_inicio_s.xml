<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicioSFragment"
    android:orientation="vertical"
    android:background="#E8F8F4F4">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="256dp"
        android:src="@drawable/banco"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Banco de Oriente"
        android:textColor="#FF5E5E"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="#F3F2F0"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etusuario"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Ingrese su usuario"
        android:textColorHint="#705EFF"
        android:textColor="#705EFF"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="#F3F2F0"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:hint="Ingrese su contraseña"
        android:textColor="#705EFF"
        android:textColorHint="#705EFF"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"/>

    <Button
        android:id="@+id/btniniciarsesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2196F3"
        android:text="Iniciar sesión"
        android:textAllCaps="false" />

</LinearLayout>
